@model List<string>
@{ int _cnt = 1; }

@if (TempData.ContainsKey("Error"))
{
    <div class="row">
        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                &times;
            </button>
            <strong>@TempData["Error"]</strong>
        </div>
    </div>
}

<div class="row" style="padding-top: 5vh;">
    @foreach (var _element in Model)
    {
        <div class="col-xs-3">
                <div class="panel panel-info" style="border-radius: 0;">
                    <div class="panel-heading" style="border-radius: 0;">
                        <a asp-action="Index" asp-controller="Database" asp-route-Name="@(_element)">
                            @_element
                        </a>
                    </div>
                </div>
            </div>
            if (_cnt % 4 == 0)
            {
                <div class="clearfix"></div>
            }

            _cnt++;
    }
</div>

<hr />

<div class="row">
    <div class="col-xs-12">
        <a class="btn btn-primary" role="button" asp-action="Index" asp-controller="Home">
            Change Connection
        </a>
    </div>
</div>